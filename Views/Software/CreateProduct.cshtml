@model Software.Models.SoftwareProduct

@{
    ViewData["Title"] = "CreateProduct";
}

<h1>CreateProduct</h1>

<h4>SoftwareProduct</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateProduct" asp-controller="Software" method="post">
            <div class="form-group">
                <label asp-for="ProductName" class="control-label">Название</label>
                <input asp-for="ProductName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="TypeId" class="control-label">Тип</label>
                <select asp-for="TypeId" class ="form-control" asp-items="ViewBag.TypeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Version" class="control-label">Версия</label>
                <input asp-for="Version" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="ReleaseDate" class="control-label">Дата релиза</label>
                <input type="date" asp-for="ReleaseDate" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="ContractId" class="control-label">Договор</label>
                <select asp-for="ContractId" class ="form-control" asp-items="ViewBag.ContractId"></select>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Отправить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
